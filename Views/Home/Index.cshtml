    <a href="~/Views/Home/Index.cshtml"></a>
    <div class="col-md-6">
        <h2>Students</h2>
        <p>
            View all students that are enrolled at this institution.
        </p>
        @*<p>@Html.ActionLink("All Students","Index","Students" , new { @class="btn btn-info"})</p>*@
        @*<p>@Html.ActionLink("Students", "Index", "Students" , new { @class = "btn btn-info" })</p>*@
        <p>@Html.ActionLink("All Students", "Index", "Students")</p>
    </div>
</div>